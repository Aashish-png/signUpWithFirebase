{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  },
  "emulators": {
    "functions": {
      "port": 5501
    },
    "firestore": {
      "port": 8000
    },
    "ui": {
      "enabled": true
    },
    "hosting": {
      "port": 5033
    }
  },
  "hosting": {
    "public": "dist/angular-sign-up",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
